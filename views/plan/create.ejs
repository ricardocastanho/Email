<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>
<body>
    <div class="container">
        <h2 class="mt-5">Criação de um novo plano</h2>
        <hr>
        <form action="/plan/store" method="POST">
            <div class="card">

                <div class="card-header">
                    <h4>Novo plano</h4>
                </div>

                <div class="card-body">
                    <input type="text" name="title" id="title" class="form-control" placeholder="Título do plano"><br>
                    <input type="number" name="list" id="list" placeholder="N* de listas" class="form-control"><br>
                    <input type="number" name="client" id="client" placeholder="N* de clientes" class="form-control"><br>
                    <input type="number" name="value" id="value" placeholder="Custo" class="form-control"><br>
                    <hr>
                    Permite importação de lista: <input type="checkbox" name="imports" id="imports">
                </div>

                <div class="card-footer">
                    <button class="btn btn-success btn-block">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>
</body>

