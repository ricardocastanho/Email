<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>
<body>
    <br>
    <div class="container">
       <div class="card">
           <div class="card-header">Planos</div>
           <div class="card-body">
               <table class="table">
                   <thead>
                       <tr>
                           <th>Id</th>
                           <th>Nome</th>
                           <th>Preço</th>
                           <th>Ações</th>
                       </tr>
                   </thead>
                   <tbody>
                       <% plans.forEach(plans => { %>
                           <tr>
                               <td><%= plans.id %></td>
                               <td><%= plans.title %></td>
                               <td>R$ <%= plans.price %></td>
                               <td>
                                <a href="/plan/edit/<%= plans.id %>" class="btn btn-sm btn-warning">Editar</a>
                               </td>
                           </tr>
                       <% }) %>
                   </tbody>
               </table>
           </div>
       </div>
   </div>
</body>

