<%- include ("../partials/header.ejs") %>
<%- include ("../partials/homenavbar.ejs") %>
<body>
    <div class="container">
        <h2 class="mt-5">Edição</h2>
        <hr>
        <form action="/plan/update" method="POST">
            <div class="card">

                <div class="card-header">
                    <h4>Editar plano</h4>
                </div>

                <div class="card-body">
                    <input type="hidden" name="id" id="id" value="<%= plans.id %>">
                    <input type="text" name="title" id="title" class="form-control" placeholder="Título do plano" value="<%= plans.title %>"><br>
                    <% if(title_msg.length > 0) { %>
                        <div class="alert alert-danger"><%= title_msg %></div>
                        <br>
                    <% } %>
                    <input type="number" name="list" id="list" placeholder="N* de listas" class="form-control" value="<%= plans.list %>"><br>

                    <% if(list_msg.length > 0) { %>
                        <div class="alert alert-danger"><%= list_msg %></div>
                        <br>
                    <% } %>

                    <input type="number" name="client" id="client" placeholder="N* de clientes" class="form-control" value="<%= plans.client %>"><br>
                    <input type="number" name="price" id="price" placeholder="Custo" class="form-control" value="<%= plans.price %>"><br>
                    <hr>
                    Permite importação de lista: 
                    <% if(plans.imports){ %>
                        <input type="checkbox" name="imports" id="imports" checked>
                    <% }else{ %>
                        <input type="checkbox" name="imports" id="imports">
                    <% } %>
                </div>

                <div class="card-footer">
                    <button class="btn btn-success btn-block">Cadastrar</button>
                </div>
            </div>
        </form>
    </div>
</body>

<%- include ("../partials/footer.ejs") %>
